# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# CSS files
[*.{css,scss,sass,less}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.{cmd,bat}]
end_of_line = crlf
